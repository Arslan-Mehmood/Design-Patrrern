{
  "name": "inventory-management-microservices",
  "version": "1.0.0",
  "description": "Inventory Management System with Microservices and Circuit Breaker Pattern",
  "main": "index.js",
  "scripts": {
    "start:inventory": "node services/inventory-service/index.js",
    "start:product": "node services/product-service/index.js",
    "start:order": "node services/order-service/index.js",
    "start:gateway": "node gateway/index.js",
    "start:all": "concurrently \"npm run start:inventory\" \"npm run start:product\" \"npm run start:order\" \"npm run start:gateway\""
  },
  "keywords": [
    "microservices",
    "circuit-breaker",
    "inventory",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}





